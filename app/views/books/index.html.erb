<p class="notice"><%= notice %></p>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td class="book-title"><%= book.title %></td>
      <td class="book-body"><%= book.body %></td>
      <td class="command"><%= link_to 'Show', book_path(book.id) %></td>
      <td class="command"><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td class="command"><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    <tr/>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <div class = "alerts">
    <h2>入力内容にエラーが<%= @book.errors.count %>件あります。</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>error <%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <div class-"field"><%= f.text_field :title %></div>
  <h4>Body</h4>
  <div class-"field"><%= f.text_area :body %></div><br>
  <div class="action"><%= f.submit 'Create Book' %></div>
<% end %>