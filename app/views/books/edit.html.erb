<h1>Editing Book</h1>
<%= form_with model: @book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <div class-"field"><%= f.text_field :title %></div>
  <h4>Body</h4>
  <div class-"field"><%= f.text_area :body %></div><br>
  <div class-"action"><%= f.submit 'Update Book' %></div>
<% end %>
<a class="command"><%= link_to 'Show', book_path %></a> | <a class="command"><%= link_to 'Back', books_path %></a>